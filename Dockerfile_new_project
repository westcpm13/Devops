# Dockerfile dla First DevOps Project

# Wybieramy obraz bazowy Ubuntu
FROM ubuntu:22.04

# Ustawienie katalogu roboczego
WORKDIR /app

# Skopiowanie plików projektu
COPY . /app# Używamy Ubuntu jako bazę
FROM ubuntu:22.04

# Nie interaktywne instalacje
ENV DEBIAN_FRONTEND=noninteractive

# Aktualizacja systemu i instalacja narzędzi
RUN apt-get update && apt-get upgrade -y && \
    apt-get install -y \
        git \
        curl \
        wget \
        unzip \
        htop \
        tree \
        jq \
        ca-certificates && \
    rm -rf /var/lib/apt/lists/*

# Konfiguracja Gita z aliasami
RUN git config --global user.name "Twoje Imię" && \
    git config --global user.email "twoj.email@example.com" && \
    git config --global alias.s "status -s" && \
    git config --global alias.lg "log --oneline --graph --decorate" && \
    git config --global alias.amend "commit --amend --no-edit" && \
    git config --global alias.undo "reset HEAD~1 --mixed"

# Tworzenie projektu
RUN mkdir -p /first-devops-project/src /first-devops-project/docs /first-devops-project/tests && \
    cd /first-devops-project && \
    git init && \
    touch README.md

# Ustawienie katalogu roboczego
WORKDIR /first-devops-project

# Domyślne polecenie po uruchomieniu kontenera
CMD [ "bash" ]
